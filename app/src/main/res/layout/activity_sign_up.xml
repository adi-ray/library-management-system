<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".SignUpActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="Welcome to E library"
        android:textColor="#061773"
        android:textSize="33sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="9dp"
        app:cardCornerRadius="12dp"

        android:padding="12dp">
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up "
                android:textColor="#005D87"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold|italic"


                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/inputs"
                android:ems="10"

                android:hint="Enter your name"
                android:textAlignment="textStart"

                android:minHeight="58dp"
                android:padding="9sp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
        android:id="@+id/RegisterEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/inputs"
        android:ems="10"

        android:hint="Enter your email"
        android:textAlignment="textStart"
        android:inputType="textEmailAddress"
        android:minHeight="58dp"
        android:padding="9sp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/RegisterPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="textStart"
        android:background="@drawable/inputs"
        android:ems="10"

        android:hint="Enter your password"

        android:inputType="textPassword"
        android:minHeight="58dp"
        android:padding="9dp"
        android:textColor="#4D575353"
        android:textSize="18sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingStart="20dp"
                android:layout_marginTop="12dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:minHeight="38dp"
                    android:text="Already have an account? "
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/loginTextdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:minHeight="38dp"
                    android:text="  Login"
                    android:textColor="#0486C1"
                    android:textSize="18dp"
                    android:textStyle="bold|italic"


                    />

            </LinearLayout>
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="25dp"
        android:autoSizeTextType="uniform"
       android:backgroundTint="#1632CD"
        android:gravity="center"

        android:text="Register"

        android:textAllCaps="false" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
